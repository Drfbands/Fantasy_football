<%= link_to 'Home', root_path %>

<h1>Listing focus</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @focu.each do |focu| %>
      <tr>
        <td><%= focu.date %></td>
        <td><%= focu.notes %></td>
        <td><%= link_to 'Show', focu %></td>
        <td><%= link_to 'Edit', edit_focu_path(focu) %></td>
        <td><%= link_to 'Destroy', focu, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Focus', new_focu_path %>
