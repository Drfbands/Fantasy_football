<%= link_to 'Home', root_path %><br>
<h1>Workout Date</h1>

<table>
  <thead>
    <tr>
      <th>Day</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fits.each do |fit| %>
      <tr>
        <td><%= fit.day %></td>
        <td><%= link_to 'Show', fit %></td>
        <td><%= link_to 'Edit', edit_fit_path(fit) %></td>
        <td><% link_to 'Destroy', fit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Create Day', new_fit_path, class: "btn btn-primary" %>

<br>
<%= will_paginate @fits %>