<%= link_to 'Home', root_path %>
<%= form_for([@day, @day.kings.build]) do |f| %> 

<h2> Editing The Review of the day </h2><br>
<hr>

<h2> Review of the day</h2>
	<%= f.text_area :time, placeholder: "How long did it take?" %><br>
	<%= f.text_area :notes, placeholder: "Notes" %><br>
	<p> Add what you want to measure here each week. <br> At the end of each week add upp your growth rate.  </p> 
	<%= f.text_area :growth, placeholder: "Growth rate per week" %><br>
	<%= f.submit %>
<% end %>

